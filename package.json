{
  "name": "langflow-chatbot",
  "version": "0.1.0",
  "description": "A Node.js package for interacting with Langflow using @datastax/langflow-client.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:tsc": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --outfile=dist/langflow-chatbot.umd.js --format=iife --global-name=LangflowChatbot --platform=browser",
    "build:plugin": "esbuild src/plugins/LangflowChatbotPlugin.ts --bundle --outfile=dist/plugins/LangflowChatbotPlugin.js --format=iife --global-name=LangflowChatbotPlugin --platform=browser",
    "build:copy-assets": "mkdir -p dist/styles && cp src/styles/langflow-chatbot.css dist/styles/langflow-chatbot.css",
    "build": "npm run clean && npm run build:tsc && npm run build:bundle && npm run build:plugin && npm run build:copy-assets",
    "test": "echo \"No tests specified\" && exit 0",
    "examples:basic": "ts-node examples/basic/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/langflow-chatbot.git"
  },
  "keywords": [
    "langflow",
    "chatbot",
    "datastax"
  ],
  "author": "DataStax, Inc. (Phil Miesle)",
  "license": "MIT",
  "dependencies": {
    "@datastax/langflow-client": "^0.2.1",
    "ejs": "^3.1.10"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.15.18",
    "@types/dotenv": "^8.2.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.25.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
